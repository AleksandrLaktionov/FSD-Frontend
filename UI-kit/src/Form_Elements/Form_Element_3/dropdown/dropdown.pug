    input(type="text" class="input-dropdown" name="drop-down-number" value='Сколько гостей' )
    .dropdown-list
        h3 взрослые
            span
                button(type="button" disabled) -
                input(type="number", name="drop-down-number" value="0" readonly)
                button(type="button") +
        h3 дети
            span
                button(type="button" disabled) -
                input(type="number", name="drop-down-number" value="0" readonly)
                button(type="button") +
        h3  младенцы
            span
                button(type="button" disabled) -
                input(type="number", name="drop-down-number" value="0" readonly)
                button(type="button") +
        .button-down
            button(type="reset") очистить
            button(type="submit") применить